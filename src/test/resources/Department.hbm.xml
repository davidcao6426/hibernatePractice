<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.bezkoder.spring.oracle.model.Department" table = "department">

        <meta attribute = "class-description">
            This class contains the employee detail.
        </meta>

        <id name = "deptId" type = "int" column = "DEPT_ID">
            <generator class="native"/>
        </id>

        <property name = "deptName" column = "DEPT_NAME" type = "string"/>
        <property name = "deptNo" column = "DEPT_NO" type = "string"/>
        <property name = "location" column = "LOCATION" type = "string"/>

    </class>
</hibernate-mapping>